{
  "manifest_version": 3,
  "name": "McGraw Plus",
  "version": "3.2.0",
  "description": "A study companion for McGraw-Hill SmartBook. Educational use only.",
  "action": {
    "default_popup": "index.html",
    "default_title": "McGraw Plus"
  },
  "background": {
    "service_worker": "serviceCore.js"
  },
  "content_scripts": [
    {
      "js": ["contentSolver.js", "answerOverlay.js"],
      "matches": ["*://learning.mheducation.com/*"]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["activeTab", "storage", "scripting", "alarms"],
  "host_permissions": [
    "*://learning.mheducation.com/*",
    "https://api.github.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["contentSolver.js"],
      "matches": ["*://learning.mheducation.com/*"]
    }
  ]
}
