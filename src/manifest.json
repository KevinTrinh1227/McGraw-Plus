{
  "manifest_version": 3,
  "name": "McGraw Plus",
  "version": "2.1.0",
  "description": "A study companion for McGraw-Hill SmartBook. Features dark mode, keyboard shortcuts, due date tracking, flashcard generation, and more.",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "McGraw Plus"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "alarms",
    "notifications",
    "clipboardWrite",
    "contextMenus"
  ],
  "commands": {
    "open-dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Open McGraw Plus Dashboard"
    }
  },
  "host_permissions": [
    "*://learning.mheducation.com/*",
    "*://connect.mheducation.com/*",
    "https://api.github.com/*",
    "https://discord.com/api/webhooks/*",
    "https://api.groq.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://learning.mheducation.com/*",
        "*://connect.mheducation.com/*"
      ],
      "js": [
        "shared/utils.js",
        "shared/storage.js",
        "shared/messaging.js",
        "content/assignment-scraper.js",
        "content/main.js"
      ],
      "css": [
        "content/dark-mode.css",
        "content/focus-mode.css",
        "content/progress-bar.css",
        "content/overlay.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/*.js",
        "content/*.css",
        "libs/*.js",
        "assets/icons/*",
        "dashboard/*",
        "shared/*.js"
      ],
      "matches": [
        "*://learning.mheducation.com/*",
        "*://connect.mheducation.com/*"
      ]
    }
  ]
}
